<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

<!-- IOc -->
	<bean id="hello" class="com.demo.HelloBean">
		<property name="name" ></property>
	</bean>


<!-- constructor -->

	<bean id="HelloBeanDIConstructor"
		class="com.demo.DI.constructor.HelloBeanDIConstructor">

		<constructor-arg value="10" type="int"></constructor-arg>

	</bean>


<!-- setter based -->

	<bean id="HelloBeanDISetter"
		class=" com.demo.DI.setterbased.HelloBeanDISetterBased">

		<property name="name">
			<value>Chakradhar</value>

		</property>

	</bean>
</beans> 